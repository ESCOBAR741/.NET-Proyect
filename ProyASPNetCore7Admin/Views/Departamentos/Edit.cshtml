@model ProyASPNetCore7Admin.Models.Departamento

@{
    ViewData["Title"] = "Edit";
}
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<h1>Editar</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NombreDepto" class="control-label"></label>
                <input asp-for="NombreDepto" class="form-control" />
                <span asp-validation-for="NombreDepto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    // Validar el campo Departamento en tiempo real
    $('#NombreDepto').on('input', function () {
        var nombreDepto = $(this).val().trim();

        if (nombreDepto === '') {
            $(this).addClass('is-invalid');
            $('span[data-valmsg-for="NombreDepto"]').text('Este campo es obligatorio.');
        } else {
            $(this).removeClass('is-invalid');
            $('span[data-valmsg-for="NombreDepto"]').text('');
        }
    });
</script>